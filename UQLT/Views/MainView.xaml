<Window x:Class="UQLT.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:cal="http://www.caliburnproject.org"
        Title="UQLT v0.1 - Server Browser" Height="780" Width="1000">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="543*"/>
            <ColumnDefinition Width="217*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"/>
            <RowDefinition Height="423*"/>
        </Grid.RowDefinitions>
        <ContentControl Name="FilterViewModel"/>
        <ContentControl Name="ServerBrowserViewModel" Grid.Row="1" Margin="0,10,0,0"/>
        <Button Content="Hide Filters" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" Margin="81,68,94,0">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <cal:ActionMessage MethodName="HideFilters"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
    </Grid>
</Window>
